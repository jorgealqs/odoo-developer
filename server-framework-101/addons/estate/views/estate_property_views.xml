<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="estate_property_view_search" model="ir.ui.view">
            <field name="name">estate.property Search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Properties">
                    <field name="name" string="Title"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <filter name="state" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" string="Available"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">estate.property Form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h1 class="mb32">
                                <field name="name" class="mb16"/>
                            </h1>
                            <field name="active" invisible="1"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </div>
                        <group>
                            <group>
                                <field name="property_type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price" string="Best offer"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area" string="Total Area (smq)"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids" string=""/>
                                </group>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="buyer"/>
                                    <field name="salesperson"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_estate_property_list" model="ir.ui.view">
            <field name="name">estate.property Tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="Estate Properties">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                    <field name="active" optional="True"/>
                </tree>
            </field>
        </record>

        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>